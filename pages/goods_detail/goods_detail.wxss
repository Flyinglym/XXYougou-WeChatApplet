.pics{
	height: 600rpx;
}
.picsList .img{
	width: 100%;
	height: 600rpx;
}
.details,
.goods_price{
	color: red;
	font-size: 36rpx;
}
.introduce{
	display: flex;
}
.goods_name{
	width: 100%;
	height: 100rpx;
}
.collection {
	width: 200rpx;
	height: 100rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	border-left: 2rpx solid rgb(97, 97, 97);
}
.collection .img{
	width: 50rpx;
	height: 50rpx;
}
.details{
	height: 80rpx;
	line-height: 80rpx;
	margin-top: 10rpx;
	border-top: 10rpx solid rgb(175, 175, 175);
}
.toolbar{
	width: 100%;
	height: 100rpx;
	display: flex;
	background-color: white;
	position: fixed;
	bottom: 0;
}
.operation1 {
	width: 50%;
	display: flex;
	justify-content: space-between;
}
.operation1 .box{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.operation1 .img{
	width: 50rpx;
	height: 50rpx;
}
.operation2 {
	width: 50%;
	display: flex;
}
.operation2 .text{
	color: white;
	font-weight: bold;
	width: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
}
.text:nth-child(1){
	background-color: rgb(255, 153, 0);
}
.text:nth-child(2){
	background-color: red;
}