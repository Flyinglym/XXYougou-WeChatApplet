/* pages/index/index.wxss */
@import "../../style/font/stylesheet.wxss";

.search {
	width: auto;
	height: 100rpx;
	background-color: #d95255;
	/* padding:0 20rpx; */
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
}

.search .input {
	width: 90%;
	text-align: center;
	background-color: white;
}

.font {
	position: absolute;
	left: 40%;
}

.swiper .img {
	width: 100%;
	height: 400rpx;
}

.nav {
	height: 200rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
}

.nav .img {
	width: 150rpx;
	height: 150rpx;
}

.floor_title {
	width: 100%;
}

.floor_title .title .title_img {
	width: 100%;
	height: 82rpx;
	background-color: #f4f4f4;
}

.floor_title .title .title_main {
	width: 100%;
	height: 400rpx;
	padding: 30rpx 14rpx;
	display: flex;
}
.floor_title .title .title_main .firstImg {
	width: 246rpx;
	height: 100%;
}
.surplusImg {
	width: 500rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-evenly;
	align-items: center;
}
.surplusImg_title{
	width: 220rpx;
	height: 190rpx;
	
}
.surplusImg_title .img {
	width: 100%;
	height: 100%;
}