.content {
	display: flex;
}

.nav {
	width: 200rpx;
	height: 1200rpx;
	position: relative;
}

.nav .navItem {
	width: 200rpx;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.active {
	color: #e62a17;
}

.active::after {
	content: "";
	width: 6rpx;
	height: 60rpx;
	background-color: #e62a17;
	position: absolute;
	left: 0;
}

.main {
	width: 550rpx;
	height: 1200rpx;
}

.main_name {
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.main_list {
	display: flex;
	flex-wrap: wrap;
	/* justify-content: space-between; */
	/* align-items: center; */
}
.main_list-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin-right: 20rpx;
}
.main_list-item .img{
	width: 160rpx;
	height: 120rpx;
}